<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--  android:tint="@color/photo_tint"-->
        <ImageView
            android:id="@+id/storeImage"
            android:layout_width="match_parent"
            android:layout_height="145dip"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            />
           <RelativeLayout
               android:layout_width="250dip"
               android:layout_height="60dip"

               android:layout_alignTop="@+id/storeImage"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:id="@+id/textimage"
               >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:scaleType="fitXY"
            android:alpha="0.73"
            android:src="@drawable/textbanner"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


               <TextView
                   android:id="@+id/storeName"
                   android:gravity="left"
                    android:textAllCaps="true"
                   android:text="Yashal"
                   android:layout_width="200dip"
                   android:layout_height="30dip"
                   android:textColorHighlight="#000000"
                   android:textSize="24sp"
                   android:textColor="@android:color/black"
                   android:layout_marginLeft="37dip"
                   android:layout_marginTop="5dip"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true" />
           </RelativeLayout>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="10dip"
            style="?android:attr/ratingBarStyleSmall"
            android:id="@+id/ratingBar"
            android:layout_alignTop="@+id/storeImage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dip"
            android:layout_marginRight="20dip"
            android:layout_alignBottom="@+id/storeImage"
            android:numStars="5"
            android:isIndicator="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="33dip"
            android:layout_below="@+id/textimage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:weightSum="3">


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

               android:src="@drawable/call"
                android:background="@null"
                android:id="@+id/button" />

            <ImageButton

                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/location_grey"
                android:background="@null"
                android:id="@+id/button14" />

            <ImageButton

                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image"
                android:background="@null"

                android:id="@+id/button15" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView><!-- From: file:/C:/Projects/ProjectStore/working/Awsmproject1/app/src/main/res/layout/card.xml -->